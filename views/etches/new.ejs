<% if(message.length) {%>
  <h4 id="invalid-text-flash"><%= message %></h4>
<% }%>

<form method="post" action="/etches">
  <div class="form-group high-margin">
    <label for="etchTitle">Etch Title</label>
    <input type="text" name="title" class="form-control" id="etchTitle" placeholder="Enter title here">
  </div>
  <div class="form-group">
    <label for="etchText">Etch body</label>
    <textarea class="form-control" name="body" id="etchtext" rows="3" placeholder="Enter text here to be analyzed"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Analyze</button>
</form>
